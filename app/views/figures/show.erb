<h2><%= @figure.name %></h2>
<h3>Titles:</h3>
<ul>
<% @figure.titles.each do |title| %>
  <li><%= title.name %></li>
<% end %>
</ul>
<h3>Landmarks:</h3>
<ul>
<% @figure.landmarks.each do |landmark| %>
  <li><%= landmark.name %></li>
<% end %>
</ul>
<form action="/figures/<%= @figure.id %>/figure" method="/post">
  <input type="hidden" id="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>
